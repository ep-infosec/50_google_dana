<!DOCTYPE html>
<html lang="en">

	<head>
		<% include ../common/head %>
	</head>

	<body>

		<% include ../common/navbar %>

		<%
		var guest=true;
		if (user!==undefined) {
			if (user.username=='admin') {
				guest=false;
			}
		}
		%>
		<div class="container" id="formulaire">
			<div class="row">
				<div class="col-md-12">
					<br>
					<br>
					<center>
						<h1>Add a new repository</h1>
					</center>
					<br>
				</div>
				<div class="col-md-offset-4 col-md-4">
					<form action="/bot/addRepository" method="post">
						<div class="form-group">
							<label>Repository name</label>
							<input type="text" class="form-control" placeholder="DontUseSpacesOrSlashes" name="repoName"/>
						</div>
						<div class="form-group">
							<label>Git Url</label>
							<input type="text" class="form-control" name="giturl"/>
						</div>
						<center>
							<br>
							<button class="btn btn-danger btn-block" type="submit" id="submitButton">Add Repository</button>
						</center>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>
